---
ogType: website # Sets all pages to website unless specified otherwise.
ogImage: /assets/Jasper_Icon_2024.png # Sets OG embed to this png unless specified otherwise.
---

<!DOCTYPE html>
<html>

<head>
    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico">
    <link rel="stylesheet" href="/assets/styles.css"> 
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8">

    <title>{{ title }}</title>
    <meta property="og:title" content="{{ title }}">
    <meta name="description" content="{{ description }}">
    <meta property="og:description" content="{{ description }}">
    <meta property="og:type" content="{{ ogType }}">
    <meta property="og:image" content="{{ ogImage }}">
    <meta property="og:image:width" content="500">
    <meta property="og:image:height" content="500">
</head>

<body>
    <nav class="mainnav">
        <img style="max-width: 100%;" src="/assets/Jasper_Icon_2024.png">
        <hr>
        <ul>
            <li><a href="/">Home</a><li>
            <li><a href="/games">Game Reviews</a></li>
            <li><a href="/projects">Personal Projects</a></li>
        </ul>
    </nav>

    <div class="content">
        <header>
            {% if titleImage %}
                <center><img style="max-height: 200px" src="{{ titleImage }}"></center>
            {% else %}
                <h1 style="text-align: center; margin: 0;">{{ title }}</h1>
            {% endif %}
        </header>

        <main>
            {{ content | safe }}
        </main>
    </div>
</body>
</html>